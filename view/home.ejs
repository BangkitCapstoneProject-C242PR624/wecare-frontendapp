<h2><strong>Hi, <%= userName %>! Welcome to WeCare!</strong></h2>
<h6>Search your first aid here</h6>

<div class="d-flex justify-content-end align-items-center mb-4">
    <form class="search-bar d-flex align-items-center me-3" method="GET" action="/home">
        <input type="text" name="search" class="form-control me-2" placeholder="Search" value="<%= searchQuery || '' %>">
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        <button type="reset" class="btn btn-secondary ms-2" onclick="window.location.href='/home'">Clear</button>
    </form>
</div>

<div class="row g-4">
    <% if (searchQuery) { %> 
        <% if (articles.length === 0) { %>
            <div class="alert alert-warning text-center" role="alert">
                No articles found for "<%= searchQuery %>". Please try a different search term.
            </div>
        <% } else { %>
            <div class="alert alert-success text-center" role="alert">
                <%= articles.length %> article<%= articles.length > 1 ? 's' : '' %> found for "<%= searchQuery %>".
            </div>
        <% } %>
    <% } %>

    <% articles.forEach(article => { %>
        <div class="col-md-4">
            <a href="/article/<%= article.id %>" class="text-decoration-none">
                <div class="card">
                    <img src="<%= article.image %>" alt="<%= article.title %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                    </div>
                </div>
            </a>
        </div>
    <% }); %>
</div>
